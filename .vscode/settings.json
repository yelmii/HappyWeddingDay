{
	"liveSassCompile.settings.formats": [
		{
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": "~/../../begin/css",
        }
    ],
	// 컴파일 경로 설정
	"compile-hero.typescript-output-directory": "./../../begin/js",

	// 컴파일 언어 설정 (js와 html 컴파일은 끔)
	"compile-hero.scss-output-toggle": false,
	
	// min 파일 생성 설정
	"compile-hero.x-generate-minified-js": true,
	"compile-hero.disable-compile-files-on-did-save-code": false
}
